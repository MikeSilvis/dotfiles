# =============================================================================
# Environment Variables Template
# =============================================================================
# Copy this file to ~/.env and fill in your actual values
# This file should NOT be committed to version control

# Apple Developer Configuration
export DEVELOPMENT_TEAM_ID='YOUR_TEAM_ID_HERE'
export APPLE_DEVELOPER_TEAM_ID='YOUR_TEAM_ID_HERE'
export APPLE_DEVELOPER_EMAIL='your.email@example.com'
export ADC_USER_NAME="your.email@example.com"

# Apple Pay Merchant IDs
export PROD_APPLE_MERCHANT_ID='merchant.com.yourname.squareup.apple-pay'
export SANDBOX_APPLE_MERCHANT_ID='merchant.com.yourname.squareup.apple-pay'

# Square-specific Configuration
export USE_SQUINTER_PRECOMMIT=1
export ENABLE_COCOAPODS_FMWK=1
export PRE_COMMIT_HOOK_AUTO_RESOLVE_ERRORS_AND_COMMIT=1

# Git Configuration
export GIT_EDITOR='vim'

# Android Development (Optional - only if you have a non-standard location)
# The development_profile will automatically detect standard locations:
#   - ~/Library/Android/sdk (Android Studio default)
#   - /usr/local/share/android-sdk (Homebrew)
# Only set these if your Android SDK is in a custom location:
# export ANDROID_HOME='/custom/path/to/android-sdk'
# export ANDROID_SDK_ROOT='/custom/path/to/android-sdk'

