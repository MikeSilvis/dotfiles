# =============================================================================
# Zsh Configuration Management
# =============================================================================

# switch-zsh-config() - Switch between minimal and full zsh configurations
function switch-zsh-config() {
    local mode="${1:-minimal}"
    # Dynamically find the dotfiles directory
    local dotfiles_dir
    
    if [ -f "./bin/dotfiles-sync" ]; then
        dotfiles_dir="$(pwd)"
    elif [ -d "${HOME}/Developer/dotfiles" ]; then
        dotfiles_dir="${HOME}/Developer/dotfiles"
    elif [ -d "${HOME}/Development/dotfiles" ]; then
        dotfiles_dir="${HOME}/Development/dotfiles"
    elif [ -d "${HOME}/dotfiles" ]; then
        dotfiles_dir="${HOME}/dotfiles"
    else
        echo "‚ùå Dotfiles directory not found!"
        return 1
    fi
    
    case "$mode" in
        "minimal")
            echo "üöÄ Creating minimal zsh configuration..."
            # Create a minimal config on the fly
            cp ~/.zshrc ~/.zshrc.backup-$(date +%Y%m%d-%H%M%S)
            cat > ~/.zshrc << 'EOF'
# Minimal zsh configuration
set -o vi
export PATH="/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:$PATH"
PROMPT='%~ $ '
autoload -U compinit
compinit
EOF
            echo "‚úÖ Minimal zshrc created"
            echo "üí° Restart your shell or run: source ~/.zshrc"
            ;;
        "full")
            echo "üêå Switching to full zsh configuration..."
            if [ -f "$dotfiles_dir/configs/shell/zshrc" ]; then
                cp ~/.zshrc ~/.zshrc.backup-$(date +%Y%m%d-%H%M%S)
                cp "$dotfiles_dir/configs/shell/zshrc" ~/.zshrc
                echo "‚úÖ Full zshrc activated"
                echo "üí° Restart your shell or run: source ~/.zshrc"
            else
                echo "‚ùå Full zshrc not found at: $dotfiles_dir/configs/shell/zshrc"
            fi
            ;;
        *)
            echo "Usage: switch-zsh-config [minimal|full]"
            echo "  minimal: Use lightweight zsh config (maximum performance)"
            echo "  full: Use full zsh config with all features"
            ;;
    esac
}

# Aliases for zsh config switching
alias zsh-minimal='switch-zsh-config minimal'
alias zsh-full='switch-zsh-config full'

# Aliases for extension management
alias install-exts='install-extensions'

# install-extensions() - Manually install editor extensions that failed during sync
function install-extensions() {
    echo "üîå Installing editor extensions manually..."
    
    # VSCode extensions removed - using Cursor only
    
    # Cursor extensions
    if command -v cursor >/dev/null 2>&1; then
        echo "üì¶ Installing Cursor extensions..."
        # Dynamically find the dotfiles directory
        local dotfiles_dir
        
        if [ -f "./bin/dotfiles-sync" ]; then
            dotfiles_dir="$(pwd)"
        elif [ -d "${HOME}/Developer/dotfiles" ]; then
            dotfiles_dir="${HOME}/Developer/dotfiles"
        elif [ -d "${HOME}/Development/dotfiles" ]; then
            dotfiles_dir="${HOME}/Development/dotfiles"
        elif [ -d "${HOME}/dotfiles" ]; then
            dotfiles_dir="${HOME}/dotfiles"
        fi
        
        if [ -f "$dotfiles_dir/configs/editors/cursor/extensions.txt" ]; then
            while IFS= read -r extension; do
                if [ -n "$extension" ]; then
                    echo "  Installing: $extension"
                    cursor --install-extension "$extension" || echo "    ‚ö†Ô∏è  Failed to install $extension"
                fi
            done < "$dotfiles_dir/configs/editors/cursor/extensions.txt"
        fi
    fi
    
    echo "‚úÖ Extension installation complete!"
}

# check-compatibility() - Check compatibility between dotfiles and Square configs
function check-compatibility() {
    echo "üîç Checking compatibility between dotfiles and Square configs..."
    
    # Check if Square configs are loaded
    if [[ -n "$SQUARE_HOME" ]]; then
        echo "‚úÖ SQUARE_HOME is set: $SQUARE_HOME"
    else
        echo "‚ö†Ô∏è  SQUARE_HOME not set (Square configs may not be loaded)"
    fi
    
    # Check RVM status
    if command -v rvm >/dev/null 2>&1; then
        echo "‚úÖ RVM is available (loaded by Square configs)"
    else
        echo "‚ö†Ô∏è  RVM not found"
    fi
    
    # Check if Square zshrc is sourced
    if [[ -f ~/Development/config_files/square/zshrc ]]; then
        echo "‚úÖ Square zshrc exists"
    else
        echo "‚ö†Ô∏è  Square zshrc not found"
    fi
    
    echo "üí° Your dotfiles are designed to work with Square's compost setup"
}
alias sync-help='sync --help'

# dotfiles-status() - Check the status of your dotfiles repository
function dotfiles-status() {
    # Dynamically find the dotfiles directory
    local DOTFILES_DIR
    
    if [ -f "./bin/dotfiles-sync" ]; then
        DOTFILES_DIR="$(pwd)"
    elif [ -d "${HOME}/Developer/dotfiles" ]; then
        DOTFILES_DIR="${HOME}/Developer/dotfiles"
    elif [ -d "${HOME}/Development/dotfiles" ]; then
        DOTFILES_DIR="${HOME}/Development/dotfiles"
    elif [ -d "${HOME}/dotfiles" ]; then
        DOTFILES_DIR="${HOME}/dotfiles"
    else
        echo "‚ùå Dotfiles directory not found!"
        return 1
    fi
    
    if [ ! -d "$DOTFILES_DIR" ]; then
        echo "‚ùå Dotfiles directory not found at: $DOTFILES_DIR"
        return 1
    fi
    
    cd "$DOTFILES_DIR" || return 1
    
    echo "üìÅ Dotfiles Repository Status:"
    echo "üìç Location: $(pwd)"
    echo "üåø Branch: $(git branch --show-current 2>/dev/null || echo 'Not a git repository')"
    echo "üìä Status: $(git status --porcelain 2>/dev/null | wc -l | xargs) uncommitted changes"
    echo "üîÑ Last sync: $(git log -1 --format='%ar' 2>/dev/null || echo 'Unknown')"
    
    # Check if sync script exists and is executable
    if [ -x "./bin/dotfiles-sync" ]; then
        echo "‚úÖ Sync script is ready"
    else
        echo "‚ùå Sync script not found or not executable"
    fi
    
    cd - > /dev/null
}

# =============================================================================
# Work-specific Functions (Square)
# =============================================================================

function override-owner-owl() {
  SHA="$1"
  OVERRIDE_REASON="$2"
  CHECK_NAME="Owner Owl"

  if [[ -z $SHA ]]; then
    echo "Must provide a SHA and override reason"
    return 1
  fi

  if [[ -z $OVERRIDE_REASON ]]; then
    echo "Must provide a SHA and override reason"
    return 1
  fi

  bundle exec sq-github-notify-commit-status \
    --fail \
    --silent \
    --repo squareup/ios-register \
    --sha "$SHA" \
    --state success \
    --name "$CHECK_NAME" \
    --description "$OVERRIDE_REASON"
}