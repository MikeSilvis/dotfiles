## Git Related
alias gcm='git commit -m'
alias gs='git status'
alias ga='git add .'
alias gc='git checkout'
alias gr='git remote -v'
alias cb=`(__git_ps1 "%s")`

function resetHard() {
  git reset --hard
  git submodule update --init
}

function push() {
  CURRENT_BRANCH=`(__git_ps1 "%s")`
	echo -n "Confirm force push: $CURRENT_BRANCH "
	read answer
	echo "Answer was: $answer"
}

